@model  IEnumerable<BookStore.Models.Customer>
@{
    ViewBag.title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.title</h2>


<table class="table table-bordered">
    <thead>
    <tr>
        <th>Id</th>
        <th>Customer Name</th>
        <th> Discount Rate </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var customer in Model )
    {
        <tr>
            <td> @customer.Id  </td>
            <td> 
                @Html.ActionLink(@customer.Name,"CustomerDetail","Customers", new { id = @customer.Id  }, null)
            </td>
            <td>
                @customer.MembershipType.Name
            </td>
        </tr>
    } 
    </tbody>
</table> 


   


